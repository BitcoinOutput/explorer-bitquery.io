query ($network: CosmosNetwork, $dateFormat: String!, $from: ISO8601DateTime, $till: ISO8601DateTime){
  chain: cosmos(network: $network ){
    transactions: transactions(options:{asc: "date.month"}, date: {since: $from, till: $till }) {
      date{
        month: date(format: $dateFormat)
      }
      count
    }
  }
}