<div class="row">
  <div class="col-12 col-lg-12 mb-4">
    <div class="card">
      <div class="card-header"><%= t('widgets.headers.inputs') %></div>
      <div class="card-body">
        <div id="inputs"><%= t('loading') %></div>
      </div>
    </div>
  </div>
</div>
<script>

  $(document).ready(function() {
    var query = new widgets.query(
    `
    query ($network: HederaNetwork!, $hash: String!, $limit: Int!, $offset: Int!) {
      hedera(network: $network) {
        inputs(transactionHash: {is: $hash}, options: {limit: $limit, offset: $offset}){
          amount
          currency{
            address
          }
        }
      }
    }

    query ($network: HederaNetwork!, $hash: String!, $limit: Int!, $offset: Int!) {
      hedera(network: $network) {
        inputs(transactionHash:{ is: $hash }, options:{ limit: $limit, offset: $offset }) {
          date{
            date
          }
          amount
          currency {
            address
            name
          }
        }
      }
    }

    `
    );

      new widgets.table('#inputs', query, 'hedera.inputs', {
          title: '<%= t('widgets.headers.inputs') %>',
          dataOptions: [
            {
              title: '<%= t('widgets.titles.amount') %>',
              path: 'amount',
              style: 'width: 80px',
              type: 'number'
            },
            {
              data: '<%= @network[:currency] %>',
              style: 'width: 20px',
            },
          ]
      });

      query.request({
          network: '<%= @network[:network] %>',
          hash: '<%= @hash %>'
      });

  });
</script>
