<% content_for :title, t("tabs.#{controller_name}.#{params[:action]}.title", network: @network[:name], collection_id: @id) %>

<% content_for :description, t("tabs.#{controller_name}.#{params[:action]}.description", network: @network[:name], collection_id: @id) %>

<% content_for :keywords, t("tabs.#{controller_name}.#{params[:action]}.keywords", network: @network[:name], collection_id: @id) %>

<%= render partial: 'shared/title', locals: {
          icon: t("tabs.#{controller_name}.icon"),
          header: t("tabs.#{controller_name}.header",
                     network: @network[:name], collection_id: copy_text(@id, 'text-info')).html_safe,
          reportrange: false} %>

