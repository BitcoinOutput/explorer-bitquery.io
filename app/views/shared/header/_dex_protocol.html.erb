<% content_for :title, t( "tabs.#{controller_name}.#{params[:action]}.title", network: @network[:name], protocol: @protocol) %>
<% content_for :description, t( "tabs.#{controller_name}.#{params[:action]}.description", network: @network[:name], protocol: @protocol) %>
<% content_for :keywords, t( "tabs.#{controller_name}.#{params[:action]}.keywords", network: @network[:name], protocol: @protocol) %>

<%= render partial: 'shared/title', locals: {
          icon: t("tabs.#{controller_name}.icon"),
          header: t( "tabs.#{controller_name}.header",
                     network: @network[:name], protocol: @protocol).html_safe,
          reportrange: true} %>
