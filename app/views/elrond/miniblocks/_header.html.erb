<% content_for :title, t("tabs.#{controller_name}.#{params[:action]}.title", network: @network[:name], miniblock_hash: @miniblock_hash) %>

<% content_for :description, t("tabs.#{controller_name}.#{params[:action]}.description", network: @network[:name], miniblock_hash: @miniblock_hash) %>

<% content_for :keywords, t("tabs.#{controller_name}.#{params[:action]}.keywords", network: @network[:name], miniblock_hash: @miniblock_hash) %>

<%= render partial: 'shared/title', locals: {
          icon: t("tabs.#{controller_name}.icon"),
          header: t("tabs.#{controller_name}.header",
                     network: @network[:name], miniblock_hash: copy_text(@miniblock_hash, 'text-info')).html_safe,
          reportrange: false} %>
