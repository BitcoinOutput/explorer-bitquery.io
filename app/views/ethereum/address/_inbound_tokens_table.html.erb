<div class="col-12 col-lg-6 mb-4">
  <div class="card">
    <div class="card-header"><%= t('widgets.headers.inbound_tokens_table') %></div>
    <div class="card-body">
      <div id="inbound_tokens_table"><%= t('loading') %></div>
    </div>
  </div>
</div>

<script>

    $( document ).ready(function() {


        var query = new widgets.query(`query ($network: EthereumNetwork!,
                            $address: String!,
                            $nativeCurrency: String!,
                            $limit: Int!,
                            $offset: Int!
                            $from: ISO8601DateTime,
                            $till: ISO8601DateTime){
                        ethereum(network: $network){
                          transfers(options:{limit: $limit, offset: $offset, desc: "count"},
                            date: {since: $from till: $till },
                            receiver: {is: $address},
                            currency: {not: $nativeCurrency }) {

                            address: sender{
                              address
                              annotation
                            }

                            max_date: maximum(of: date)

                            count
                            amount

                            currency {
                              address
                              symbol
                              tokenType
                            }

                          }
                        }
                      }`);

        new widgets.table('#inbound_tokens_table', query, 'ethereum.transfers', {
            title: '<%= t('widgets.headers.inbound_tokens_table') %>',
            tableOptions: {
                title: [
                    '<%= t('widgets.titles.sender') %>',
                    '',
                    '<%= t('widgets.titles.amount') %>',
                    '<%= t('widgets.titles.currency') %>',
                    '<%= t('widgets.titles.max_date') %>',
                    '<%= t('widgets.titles.transfer_count') %>',

                ],
                dataOptions: [
                    {
                        type: 'string-ellipsis',
                        path: ['address.annotation','address.address'],
                        urlCallbackName: 'address_path'
                    },
                    {
                        type: 'string',
                        data: '<i class="fa fa-sign-in text-success"></i>',
                        html_class: 'text-center'
                    },
                    {
                        type: 'amount',
                        path: 'amount'
                    },
                    {
                        type: 'string-ellipsis',
                        path: 'currency.symbol',
                        urlCallbackName: 'token_path'
                    },
                    {
                        type: 'string',
                        path: 'max_date'
                    },
                    {
                        type: 'count',
                        path: 'count',
                        data: '%{DATA} <span class="fa fa-list"></span>',
                        urlCallbackName: 'transfer_to_path'
                    },

                ]
            }
        });

        queryWithTimeRange(rr, query, <%= @from.html_safe %>,<%= @till.html_safe %>,{
            network: '<%= params['network']['network'] %>',
            address: '<%= @address %>',
            nativeCurrency: '<%= @network[:currency] %>'
        });


    });

</script>