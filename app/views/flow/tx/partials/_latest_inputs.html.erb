<div class="row">
  <div class="col-12 col-lg-12 mb-4">
    <div class="card">
      <div class="card-header"><%= t('widgets.headers.latest_inputs') %></div>
      <div class="card-body">
        <div id="latest_inputs"><%= t('loading') %></div>
      </div>
    </div>
  </div>
</div>

<script>
  $( document ).ready(function() {
    const qraphql_query = `
      query ($network: FlowNetwork!, $limit: Int!, $offset: Int!, $from: ISO8601DateTime, $till: ISO8601DateTime, $id: String!) {
        flow(network: $network) {
          inputs(
            options: {desc: "time.time", limit: $limit, offset: $offset, asc: "eventIndex"}
            date: {since: $from, till: $till}
            transactionId: {is: $id}
          ) {
            time {
              time(format: "%Y-%m-%d %H:%M:%S")
            }
            currency {
              symbol
            }
            address
            entityId
            amount
            eventIndex
            transferReason
            type
          }
        }
      }
    `.trim();

    const query = new widgets.query(qraphql_query);

    new widgets.table('#latest_inputs', query, 'flow.inputs', {
      title: '<%= t('widgets.headers.latest_inputs') %>',
      dataOptions: [
        {
          title: '<%= t('widgets.titles.timestamp') %>',
          type: 'string',
          style: 'width: 180px',
          path: 'time.time'
        },
        {
          title: '<%= t('widgets.titles.event_index') %>',
          type: 'string',
          path: 'eventIndex'
        },
        {
          title: '<%= t('widgets.titles.address') %>',
          type: 'string',
          path: 'address',
          urlCallbackName: 'address',
        },
        {
          title: '<%= t('widgets.titles.entity_id') %>',
          type: 'string',
          path: 'entityId'
        },
        {
          title: '<%= t('widgets.titles.amount') %>',
          type: 'string',
          path: 'amount'
        },
        {
          title: '<%= t('widgets.titles.type') %>',
          type: 'string',
          path: 'type'
        },
        {
          title: '<%= t('widgets.titles.transfer_reason') %>',
          type: 'string',
          path: 'transferReason'
        },
      ]
    });

    query.request({
      id: '<%= @tx_id %>',
      network: '<%= params['network']['network'] %>'
    });
  });
</script>


