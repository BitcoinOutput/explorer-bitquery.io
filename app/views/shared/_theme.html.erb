<% themes = {'light': {icon: "\u{1F31E}", name: t('themes.light')}, 'dark': {icon: "\u{1F312}", name: t('themes.dark')}} %>

<li class="nav-item dropdown active">
  <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <i class="fa fa-sun text-success"></i><i class="fa fa-moon text-success"></i><span title="<%= themes[@theme.to_sym][:name] %>"><%= themes[@theme.to_sym][:icon] %></span>
  </a>
  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
    <% themes.each do |tag, theme| %>
       <%= link_to "#{theme[:icon]} #{theme[:name]}", request.query_parameters.merge(theme: tag), class: 'dropdown-item' %>
    <% end %>
  </div>
</li>