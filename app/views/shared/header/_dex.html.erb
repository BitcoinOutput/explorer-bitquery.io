<% content_for :title, t( "tabs.#{controller_name}.#{params[:action]}.title", network: @network[:name], exchange_name: @exchange_name) %>
<% content_for :description, t( "tabs.#{controller_name}.#{params[:action]}.description", network: @network[:name], exchange_name: @exchange_name) %>
<% content_for :keywords, t( "tabs.#{controller_name}.#{params[:action]}.keywords", network: @network[:name], exchange_name: @exchange_name) %>

<%= render partial: 'shared/title', locals: {
          icon: t("tabs.#{controller_name}.icon"),
          header: t( "tabs.#{controller_name}.header",
                     network: @network[:name], exchange_name: copy_text(@exchange_name, 'text-info')).html_safe,
          reportrange: true} %>
