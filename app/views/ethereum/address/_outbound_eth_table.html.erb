<div class="col-12 col-lg-6 mb-4">
    <div class="card">
      <div class="card-header"><%= t('widgets.headers.outbound_eth_table', currency: @network[:currency]) %></div>
      <div class="card-body">
        <div id="outbound_eth_table"><%= t('loading') %></div>
      </div>
    </div>
</div>

<script>

    $( document ).ready(function() {


        var query = new widgets.query(`query ($network: EthereumNetwork!,
                      $address: String!,
                      $nativeCurrency: String!,
                      $limit: Int!,
                      $offset: Int!
                      $from: ISO8601DateTime,
                      $till: ISO8601DateTime){
                  ethereum(network: $network){
                    transfers(options:{limit: $limit, offset: $offset, desc: "amount"},
                      date: {since: $from till: $till },
                      sender: {is: $address},
                      currency: {is: $nativeCurrency }) {

                      address: receiver{
                        address
                        annotation
                      }


                      count
                      amount
                      max_date: maximum(of: date)

                      currency {
                        address
                        symbol
                      }

                    }
                  }
                }`);

        new widgets.table('#outbound_eth_table', query, 'ethereum.transfers', {
            title: '<%= t('widgets.headers.outbound_eth_table', currency: @network[:currency]) %>',
            tableOptions: {
                title: [
                    '<%= t('widgets.titles.receiver') %>',
                    '<%= t('widgets.titles.amount') %>',
                    '',
                    '<%= t('widgets.titles.max_date') %>',
                    '<%= t('widgets.titles.transfer_count') %>',

                ],
                dataOptions: [
                    {
                        type: 'string-ellipsis',
                        path: ['address.annotation','address.address'],
                        urlCallbackName: 'address_path'
                    },
                    {
                        type: 'amount',
                        path: 'amount'
                    },
                    {
                        type: 'string',
                        data: '<%= @network[:currency] %>',
                    },
                    {
                        type: 'string',
                        path: 'max_date'
                    },
                    {
                        type: 'count',
                        path: 'count',
                        data: '%{DATA} <span class="fa fa-list"></span>',
                        urlCallbackName: 'transfer_from_path'
                    },

                ]
            }
        });

        queryWithTimeRange(rr, query, <%= @from.html_safe %>,<%= @till.html_safe %>,{
            network: '<%= params['network']['network'] %>',
            address: '<%= @address %>',
            nativeCurrency: '<%= @network[:currency] %>'
        });


    });

</script>