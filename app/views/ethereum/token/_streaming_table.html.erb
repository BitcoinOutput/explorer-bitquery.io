<% if innovation_in_blockchain? %>
  <div class="row">
    <div class="col-12 col-lg-12 mb-4">
      <div class="card">
        <div id="Latest-Trades-of-Tokens-in-Network"></div>
      </div>
    </div>
  </div>
  <script>
    class LatestTradesofTokensinNetwork extends BootstrapTableComponent {
      configuration() {
        return  {
          topElement: function (response){ return response.EVM.DEXTrades},
            chainId: function (response){ return response.EVM.DEXTrades[0].ChainId},
          columns: [
            {
              name: 'Timestamp', cell: function(row){ return row.Block.Time}, rendering: renderDate,
            },
            {
              name: 'Block', cell: function(row){ return row.Block.Number }, rendering: renderJustAddressLink
            },
            {
              name: 'Sender', cell: function(row) { return row.Trade.Sell.Seller}, rendering: renderAddressLink
            },
            {
              name: 'Sell amount',
              cell: function(row) {
              return parseFloat(row.Trade.Sell.Amount).toFixed(4)
              }
            },
            {
              name: 'Sell currency',
              cell: function(row) {return row.Trade.Sell.Currency.Symbol}
            },

            {
              name: '', cell: function(row) { return '' }, rendering: renderSenderRecieverIcon
            },
            {
              name: 'Receiver',
              cell: function(row) {
                return row.Trade.Buy.Buyer
              },
              rendering: renderJustAddressLink
            },
            {
              name: 'Buy amount',
              cell: function(row) {
                return parseFloat(row.Trade.Buy.Price).toFixed(3)
              }
            },
            {
              name: 'Buy currency',
              cell: function(row) {
                return row.Trade.Buy.Currency.Symbol
              }
            },
            {
              name: 'Price',
              cell: function(row) {
                return parseFloat(row.Trade.Buy.Price).toFixed(3)
              }
            },
            {
              name: 'Transaction',
              cell: function(row) {
                return row.Transaction.Hash
              },
              rendering: renderJustAddressLink
            }
          ]
        }
      }
    }
    const variables = {
      network:'<%= @streaming%>',
      limit: 10,
      offset: 0,
      address: '<%= @address %>',
      token: '<%= @address %>',
      id: '<%= @id %>',
    }
    renderWithTime(variables,<%= limited_date_range_limit(@from, @till).join(',').html_safe %>, function f(variables){
      renderComponent(LatestTradesofTokensinNetwork, "#Latest-Trades-of-Tokens-in-Network",'Latest-Trades-of-Tokens-in-Network_1',variables);
    })
  </script>
<% end %>
