
<div class="row">

<% for group in BLOCKCHAINS.group_by{|bc| bc[:platform]} %>
  <div class="col-lg-3 mb-4">
  <div class="card">
    <div class="card-header"><%= t "pages.home.family", family: group.first %></div>
    <div class="card-body">
      <ul class="list-group list-group-flush">
        <% for chain in group.second %>
          <li class="list-group-item"><%= network_icon chain %>&nbsp;
            <%= link_to chain[:name], "/#{chain[:path]}" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  </div>
<% end %>

<% for group in DATASETS.group_by{|bc| bc[:family]} %>
  <div class="col-lg-3 mb-4">
  <div class="card">
    <div class="card-header"><%= t "pages.home.offchain", family: group.first.capitalize %></div>
    <div class="card-body">
      <ul class="list-group list-group-flush">
        <% for dataset in group.second %>
          <li class="list-group-item">
            <%= dataset_icon dataset %>&nbsp;
            <%= link_to dataset[:name], "/#{dataset[:path]}" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  </div>
<% end %>

</div>