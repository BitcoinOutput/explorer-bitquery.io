<%= extend_layout :application do %>
  <% content_for :title, t( "tabs.#{controller_name}.#{params[:action]}.title", network: @network[:tag], address: @address) %>
  <% content_for :description, t( "tabs.#{controller_name}.#{params[:action]}.description", network: @network[:name], address: @address) %>
  <%= render partial: 'shared/title', locals: {
          icon: t("tabs.#{controller_name}.icon"),
          header: t( "tabs.#{controller_name}.#{params[:action]}.header", network: @network[:name], address: copy_text(@address, 'text-info')).html_safe,
          reportrange: true} %>
  <%= render partial: 'tabs' %>
  <div><%= yield %></div>
<% end %>