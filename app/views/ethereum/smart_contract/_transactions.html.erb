<div class="row">
  <div class="col-12 col-lg-12 mb-4">
    <div class="card">
      <div class="card-header"><%= t('widgets.headers.smart_contract_transactions') %></div>
      <div class="card-body">
        <div id="smart_contract_transactions"><%= t('loading') %></div>
      </div>
    </div>
  </div>
</div>

<script>

    $( document ).ready(function() {


        var query = new widgets.query(`query ($network: EthereumNetwork!,
                    $address: String!,
                    $limit: Int!,
                    $offset: Int!
                    $from: ISO8601DateTime,
                    $till: ISO8601DateTime){
                ethereum(network: $network){
                  smartContractCalls(options:{desc: "block.timestamp.time", limit: $limit, offset: $offset},
                    date: {since: $from till: $till },
                    smartContractAddress: {is: $address}) {

                    block {
                      timestamp {
                        time (format: "%Y-%m-%d %H:%M:%S")
                      }
                      height
                    }
                    smartContractMethod {
                      name
                      signatureHash
                    }

                    address: caller {
                      address
                      annotation
                    }

                    transaction {
                      hash
                    }
                    gasValue
                    external
                  }
                }
              }`);

        new widgets.table('#smart_contract_transactions', query, 'ethereum.smartContractCalls', {
            title: '<%= t('widgets.headers.smart_contract_transactions') %>',
            tableOptions: {
                title: [
                    '<%= t('widgets.titles.timestamp') %>',
                    '<%= t('widgets.titles.block') %>',
                    '<%= t('widgets.titles.method') %>',
                    '<%= t('widgets.titles.caller') %>',



                    '<%= t('widgets.titles.gas_value') %>',
                    '<%= t('widgets.titles.transaction') %>'
                ],
                dataOptions: [
                    {
                        type: 'string',
                        path: 'block.timestamp.time'
                    },
                    {
                        type: 'string',
                        path: 'block.height',
                        urlCallbackName: 'block_path'
                    },
                    {
                        type: 'string-ellipsis',
                        path: 'smartContractMethod.name',
                        urlCallbackName: 'smart_contract_method_path'
                    },
                    {
                        type: 'string-ellipsis',
                        path: ['address.annotation','address.address'],
                        urlCallbackName: 'address_path'
                    },
                    {
                        type: 'amount',
                        path: 'gasValue'
                    },
                    {
                        type: 'string-ellipsis',
                        path: 'transaction.hash',
                        urlCallbackName: 'transaction_path'
                    },
                ]
            }
        });

        queryWithTimeRange(rr, query, <%= @from.html_safe %>,<%= @till.html_safe %>,{
            network: '<%= params['network']['network'] %>',
            address: '<%= @address %>'
        });


    });

</script>