<div class="row">
  <div class="col-12 col-lg-12 mb-4">
    <div class="card">
      <div class="card-header"><%= t('widgets.headers.transactions') %></div>
      <div class="card-body">
        <div id="transactions"><%= t('loading') %></div>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function() {

    const qraphql_query = `
      query ($network: HederaNetwork!, $limit: Int!, $offset: Int!, $from: ISO8601DateTime, $till: ISO8601DateTime, $account_id: String!) {
        hedera(network: $network) {
          transactions(options: {desc: "time.time", limit: $limit, offset: $offset}, date: {since: $from, till: $till}) {
            account: entity(entityType: {is: account}) {
              id(entityId: $account_id)
            }
            time {
              time
            }
            transactionHash
            transactionType
            success
            memo
          }
        }
      }
    `.trim();

    const query = new widgets.query(qraphql_query);

    new widgets.table('#transactions', query, 'hedera.transactions', {
      title: '<%= t('widgets.headers.transactions') %>',
      dataOptions: [
        {
          title: '<%= t('widgets.titles.transaction_hash') %>',
          path: 'transactionHash',
          urlCallbackName: 'transaction_hash_path',
          style: 'width: 70px;'
        },
        {
          title: '<%= t('widgets.titles.transaction_type') %>',
          path: 'transactionType',
          style: 'width: 70px;'
        },
        {
          title: '<%= t('widgets.titles.date') %>',
          path: 'time.time',
          style: 'width: 70px;'
        },
        {
          title: '<%= t('widgets.titles.success') %>',
          path: 'success',
          style: 'width: 70px;'
        },
        {
          title: '<%= t('widgets.titles.memo') %>',
          path: 'memo',
          style: 'width: 70px;'
        },
      ]
    });

    query.request({
      account_id: '<%= @account_id %>',
      network: '<%= @network[:network] %>'
    });

  });
</script>
