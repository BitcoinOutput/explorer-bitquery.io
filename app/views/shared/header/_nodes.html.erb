<% content_for :title, t("tabs.#{controller_name}.#{params[:action]}.title", network: @network[:name], node_account: @node_account) %>

<% content_for :description, t("tabs.#{controller_name}.#{params[:action]}.description", network: @network[:name], node_account: @node_account) %>

<% content_for :keywords, t("tabs.#{controller_name}.#{params[:action]}.keywords", network: @network[:name], node_account: @node_account) %>

<%= render partial: 'shared/title', locals: {
          icon: t("tabs.#{controller_name}.icon"),
          header: t("tabs.#{controller_name}.header",
                     network: @network[:name], node_account: copy_text(@node_account, 'text-info')).html_safe,
          reportrange: true} %>
