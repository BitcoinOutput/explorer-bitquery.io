<div class="row">
  <div class="col-12 col-lg-12 mb-4">
    <div class="card">
      <div class="card-header"><%= t('widgets.headers.tx_calls') %></div>
      <div class="card-body">
        <div id="tx_calls"><%= t('loading') %></div>
      </div>
    </div>
  </div>
</div>

<script>

    $( document ).ready(function() {


        var query = new widgets.query(`query ($network: EthereumNetwork!,
                    $hash: String!,
                    $limit: Int!,
                    $offset: Int!){
                ethereum(network: $network){
                  smartContractCalls(
                    options:{limit: $limit, offset: $offset,
                      asc: "callDepth"},
                    txHash: {is: $hash }) {


                    smartContract {
                      address {
                        address
                        annotation
                      }
                      contractType
                    }

                    smartContractMethod {
                      name
                      signatureHash
                    }

                    address: caller {
                      address
                      annotation
                    }

                    success

                    gasValue

                    callDepth

                  }
                }
              }`);

        new widgets.table('#tx_calls', query, 'ethereum.smartContractCalls', {
            title: '<%= t('widgets.headers.tx_calls') %>',
            tableOptions: {
                title: [
                    '<%= t('widgets.titles.call_depth') %>',

                    '<%= t('widgets.titles.method') %>',
                    '<%= t('widgets.titles.smart_contract') %>',
                    '<%= t('widgets.titles.smart_contract_type') %>',

                    '<%= t('widgets.titles.caller') %>',

                    '<%= t('widgets.titles.success') %>',
                    '<%= t('widgets.titles.gas_value') %>',
                ],
                dataOptions: [
                    {
                        type: 'string',
                        path: 'callDepth'
                    },
                    {
                        type: 'string-ellipsis',
                        path: 'smartContractMethod.name',
                        urlCallbackName: 'smart_contract_method_path'
                    },
                    {
                        type: 'string-ellipsis',
                        path: ['smartContract.address.annotation', 'smartContract.address.address'],
                        urlCallbackName: 'smart_contract_path'
                    },
                    {
                        type: 'string',
                        path: 'smartContract.contractType'
                    },
                    {
                        type: 'string-ellipsis',
                        path: ['address.annotation','address.address'],
                        urlCallbackName: 'address_path'
                    },
                    {
                        type: 'string',
                        path: 'success'
                    },

                    {
                        type: 'amount',
                        path: 'gasValue'
                    },

                ]
            }
        });


        query.request({
            network: '<%= params['network']['network'] %>',
            hash: '<%= @hash %>'
        });



    });

</script>