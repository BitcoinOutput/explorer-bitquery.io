<div class="row">
  <div class="col-12 col-lg-6 mb-4">
    <div class="card">
      <div class="card-header">
        <%= t('widgets.headers.account_info') %>
      </div>
      <div class="card-body">
        <div id="#account_info"><%= t('loading') %></div>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function() {

    const qraphql_query = `
      query ($network: HederaNetwork!,
             $limit: Int!, 
             $offset: Int!, 
             $from: ISO8601DateTime, 
             $till: ISO8601DateTime, 
             $account_id: String!) {
        hedera(network: $network) {
          transactions(options: {desc: "time.time", limit: $limit, offset: $offset}, date: {since: $from, till: $till}) {
            time {
              time
            }
            account: entity(entityType: {is: account}) {
              id(entityId: $account_id)
            }
            payerAccount {
              id
            }
            transactionType
            memo
            initialBalance
          }
        }
      }
    `.trim();

    const query = new widgets.query(qraphql_query);

    new widgets.table('#account_info', query, 'hedera.account', {
      title: '<%= t('widgets.headers.latest_transactions') %>',
      dataOptions: [
        {
          title: '<%= t('widgets.titles.transaction_type') %>',
          type: 'string',
          path: 'transactionType',
          style: 'width: 100px;'
        },
      ]
    });

    query.request({
      account_id: '<%= @account_id %>',
      network: '<%= @network[:network] %>'
    });

  });
</script>
