<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9 http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd" xmlns="http://www.sitemaps.org/schemas/sitemap/0.9" xmlns:xhtml="http://www.w3.org/1999/xhtml">

  <% for proposer in @response.proposers.transactions %>
    <%= render 'sitemaps/url', {
      url: url_for(controller: "#{@network[:family]}/address",
                   action: 'show',
                   address: proposer.proposer.address,
                   blockchain: @network[:network],
                   network: @network,
                   only_path: false) } %>
  <% end %>

  <% for sender in @response.senders.inputs %>
    <%= render 'sitemaps/url', {
      url: url_for(controller: "#{@network[:family]}/address",
                   action: 'show',
                   address: sender.address.address,
                   blockchain: @network[:network],
                   network: @network,
                   only_path: false) } %>
  <% end %>

  <% for receiver in @response.receivers.outputs %>
    <%= render 'sitemaps/url', {
      url: url_for(controller: "#{@network[:family]}/address",
                   action: 'show',
                   address: receiver.address.address,
                   blockchain: @network[:network],
                   network: @network,
                   only_path: false) } %>
  <% end %>

</urlset>

